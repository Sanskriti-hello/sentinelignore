{
  "name": "cybercrime-portal-backend",
  "version": "1.0.0",
  "description": "A comprehensive backend system for managing cybercrime reports with AI-powered analysis",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:legacy": "nodemon src/server.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "build": "echo 'No build step required for Node.js'",
    "docker:build": "docker build -t cybercrime-backend .",
    "docker:run": "docker run -p 5001:5001 cybercrime-backend",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "health": "curl http://localhost:5001/health"
  },
  "keywords": [
    "cybercrime",
    "security",
    "ai",
    "ml",
    "nodejs",
    "express",
    "postgresql",
    "python"
  ],
  "author": "Cybercrime Portal Team",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@clerk/clerk-sdk-node": "^4.13.23",
    "@neondatabase/serverless": "^1.0.1",
    "@upstash/ratelimit": "^2.0.5",
    "@upstash/redis": "^1.34.9",
    "bcryptjs": "^2.4.3",
    "body-parser": "^2.2.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "postgres": "^3.4.7",
    "twilio": "^4.19.0",
    "uuid": "^11.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/cybercrime-portal-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/cybercrime-portal-backend/issues"
  },
  "homepage": "https://github.com/your-org/cybercrime-portal-backend#readme"
}
